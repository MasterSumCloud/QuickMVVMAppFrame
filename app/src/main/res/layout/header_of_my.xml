<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.demo.appframe.vm.FrmMyVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14dp">

        <View
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/shape_brlight_white_c45"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />


        <View
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:background="@drawable/shape_bg_white_c36"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="42dp"
            android:background="@mipmap/header_ofmy_default"
            app:imageUrlRound="@{vm.headerImageUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@{vm.userName}"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:text="去登录/注册" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_bg_black_c5"
            android:paddingLeft="6dp"
            android:paddingTop="4dp"
            android:paddingRight="26dp"
            android:paddingBottom="4dp"
            android:text="@{vm.userId}"
            android:textColor="@color/gray_b6b9c6"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:text="20111016" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="6dp"
            android:background="@color/red_FB4447"
            app:layout_constraintBottom_toBottomOf="@+id/textView39"
            app:layout_constraintEnd_toEndOf="@+id/textView39"
            app:layout_constraintTop_toTopOf="@+id/textView39" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="15dp"
            android:background="@color/black_23234c"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageviewOpenVipOrCenter"
            android:layout_width="76dp"
            android:layout_height="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:background="@color/red_FB4447"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.vipTime}"
            android:textColor="@color/gray_cdcfd0"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/imageviewOpenVipOrCenter"
            app:layout_constraintTop_toBottomOf="@+id/imageviewOpenVipOrCenter" />


        <View
            android:id="@+id/viewOpenVipOrCenter"
            android:layout_width="74dp"
            android:layout_height="28dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/shape_h_graywhite_c14"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.openVip}"
            android:textColor="@color/black_212330"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/viewOpenVipOrCenter"
            app:layout_constraintEnd_toEndOf="@+id/viewOpenVipOrCenter"
            app:layout_constraintStart_toStartOf="@+id/viewOpenVipOrCenter"
            app:layout_constraintTop_toTopOf="@+id/viewOpenVipOrCenter" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>